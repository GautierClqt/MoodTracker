<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="90dp"
    android:orientation="horizontal"
    android:layout_weight="5">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.80"
        android:id="@+id/layout_historic_listitem_parentlayout_layout">

        <TextView
            android:id="@+id/layout_historic_listitem_sincewhen_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorAccent"
            android:text="Il y a x jours" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/layout_historic_listitem_attachedcomment_image"
            android:layout_width="57dp"
            android:layout_height="56dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="0dp"
            android:padding="15dp"
            android:src="@drawable/ic_comment_black_48px" />

    </RelativeLayout>

    <TextView
        android:id="@+id/layout_historic_listitem_blanktextview_text"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.20"
        android:background="@color/lightGrey" />

</LinearLayout>