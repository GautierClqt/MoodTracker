<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:id="@+id/layout_historic_listitem_parentlayout_layout">

        <TextView
            android:id="@+id/layout_historic_listitem_sincewhen_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/colorAccent"
            android:text="Il y a x jours" />

        <TextView
            android:id="@+id/layout_historic_listitem_blanktextview_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@color/lightGrey"/>

    </LinearLayout>


    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/layout_historic_listitem_attachedcomment_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_comment_black_48px" />

</RelativeLayout>