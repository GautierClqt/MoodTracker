<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MoodSelectActivity">

    <TextView
        android:id="@+id/activity_mood_testText_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:text="SÃ©lectionnez votre humeur :"
        android:layout_gravity="center_horizontal"/>

    <ImageView
        android:id="@+id/activity_mood_select_superHappy_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:srcCompat="@drawable/smiley_super_happy" />

    <ImageView
        android:id="@+id/activity_mood_select_happy_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:srcCompat="@drawable/smiley_happy" />

    <ImageView
        android:id="@+id/activity_mood_select_normal_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:srcCompat="@drawable/smiley_normal" />

    <ImageView
        android:id="@+id/activity_mood_select_disappointed_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:srcCompat="@drawable/smiley_disappointed" />

    <ImageView
        android:id="@+id/activity_mood_select_sad_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:srcCompat="@drawable/smiley_sad" />

</LinearLayout>